module sum_leds(
    input logic clk, reset,
    input logic [3:0] a, b,
    output logic [5:0] leds
);
    logic [5:0] sum;
    
    always_ff @(posedge clk or posedge reset) begin
        if (reset)
            sum <= 6'b0;
        else
            sum <= a + b;
    end
    
    assign leds = sum;
    
endmodule
